<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imgViewLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/ic_launcher_foreground" />

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgViewLogo"
        android:layout_marginTop="96dp"
        android:backgroundTint="@color/azulMedio"
        android:fontFamily="@font/robotomedium"
        android:hint="@string/hint_username"
        android:minHeight="48dp"
        android:textColor="@color/azulCielo"
        android:textColorHint="@color/azulCielo" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUsername"
        android:layout_marginTop="9dp"
        android:backgroundTint="@color/azulMedio"
        android:fontFamily="@font/robotomedium"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="@color/azulCielo"
        android:textColorHint="@color/azulCielo" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="96dp"
        android:backgroundTint="@color/azulCielo"
        android:text="@string/btn_login"
        android:textColor="@android:color/white"
        android:textColorHighlight="@color/azulCielo"
        android:textColorLink="@color/azulCielo" />

</RelativeLayout>